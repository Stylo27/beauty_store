{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/products": {
      "get": {
        "summary": "Get products list",
        "tags": [
          "Products"
        ],
        "consumes": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "categories",
            "in": "query",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          {
            "name": "price_from",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "price_to",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "under_sale",
            "in": "query",
            "type": "boolean"
          },
          {
            "name": "available",
            "in": "query",
            "type": "boolean"
          },
          {
            "name": "order_by_name",
            "in": "query",
            "type": "string"
          },
          {
            "name": "order_by_category",
            "in": "query",
            "type": "string"
          },
          {
            "name": "order_by_price",
            "in": "query",
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "per_page",
            "in": "query",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "ok",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "sold_out": {
                  "type": "boolean"
                },
                "category": {
                  "type": "string"
                },
                "under_sale": {
                  "type": "boolean"
                },
                "price": {
                  "type": "integer"
                },
                "sale_price": {
                  "type": "integer"
                },
                "sale_text": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/products/{id}": {
      "get": {
        "summary": "Retrieves a product",
        "tags": [
          "Products"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "blog found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "sold_out": {
                  "type": "boolean"
                },
                "category": {
                  "type": "string"
                },
                "under_sale": {
                  "type": "boolean"
                },
                "price": {
                  "type": "integer"
                },
                "sale_price": {
                  "type": "integer"
                },
                "sale_text": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "blog not found"
          },
          "406": {
            "description": "unsupported accept header"
          }
        }
      }
    }
  }
}